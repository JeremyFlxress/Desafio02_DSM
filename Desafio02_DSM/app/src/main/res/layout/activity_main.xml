<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/gris_fondo"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/spacing_xlarge">

        <!-- Título -->
        <TextView
            android:id="@+id/tvAppName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_title"
            android:textColor="@color/verde_esmeralda"
            android:textSize="@dimen/text_size_xxlarge"
            android:textStyle="bold" />

        <!-- Subtítulo -->
        <TextView
            android:id="@+id/tvSubtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_xlarge"
            android:text="@string/app_description"
            android:textColor="@color/gris_texto"
            android:textSize="@dimen/text_size_small" />

        <!-- Card de login -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/card_padding"
            android:background="@color/blanco"
            android:clipToPadding="false"
            android:elevation="@dimen/card_elevation"
            android:orientation="vertical"
            android:padding="@dimen/spacing_large">

            <!-- Email -->
            <EditText
                android:id="@+id/etEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableStart="@android:drawable/ic_dialog_email"
                android:hint="@string/main_email_hint"
                android:inputType="textEmailAddress"
                android:padding="@dimen/input_padding" />

            <!-- Password -->
            <EditText
                android:id="@+id/etPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/list_item_margin_top"
                android:drawableStart="@android:drawable/ic_lock_idle_lock"
                android:hint="@string/main_password_hint"
                android:inputType="textPassword"
                android:padding="@dimen/input_padding" />

            <!-- Botón login -->
            <Button
                android:id="@+id/btnLogin"
                android:layout_width="match_parent"
                android:layout_height="@dimen/button_size_small"
                android:layout_marginTop="@dimen/card_margin"
                android:backgroundTint="@color/verde_esmeralda"
                android:text="@string/main_login_button"
                android:textColor="@color/blanco" />

            <Button
                android:id="@+id/btnRegistrarse"
                android:layout_width="match_parent"
                android:layout_height="@dimen/button_size_small"
                android:layout_marginTop="@dimen/button_margin"
                android:backgroundTint="@color/azul_claro"
                android:text="@string/main_register_button"
                android:textColor="@color/blanco" />

            <!-- Botones sociales -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/card_margin"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnFacebook"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/button_size_small"
                    android:layout_weight="1"
                    android:backgroundTint="@color/azul_claro"
                    android:text="@string/main_facebook_button" />

                <Space
                    android:layout_width="@dimen/spacing_medium"
                    android:layout_height="wrap_content" />

                <Button
                    android:id="@+id/btnGitHub"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/button_size_small"
                    android:layout_weight="1"
                    android:backgroundTint="@color/azul_claro"
                    android:text="@string/main_github_button" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>