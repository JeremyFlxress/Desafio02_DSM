<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/spacing_xlarge"
    android:gravity="center"
    android:background="@color/gris_fondo">

    <TextView
        android:id="@+id/tvTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/registrar_empleado_title"
        android:textSize="@dimen/text_size_large"
        android:textStyle="bold"
        android:textColor="@color/verde_esmeralda"
        android:layout_marginBottom="@dimen/spacing_large"/>

    <EditText
        android:id="@+id/etNombreEmpleado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/registrar_empleado_name_hint"
        android:inputType="textPersonName"
        android:padding="@dimen/input_padding"/>

    <EditText
        android:id="@+id/etEmailEmpleado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/registrar_empleado_email_hint"
        android:inputType="textEmailAddress"
        android:drawableStart="@android:drawable/ic_dialog_email"
        android:padding="@dimen/input_padding"/>

    <EditText
        android:id="@+id/etPasswordEmpleado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/list_item_margin_top"
        android:hint="@string/registrar_empleado_password_hint"
        android:inputType="textPassword"
        android:drawableStart="@android:drawable/ic_lock_idle_lock"
        android:padding="@dimen/input_padding"/>

    <EditText
        android:id="@+id/etConfirmarPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/list_item_margin_top"
        android:hint="@string/registrar_empleado_confirm_password_hint"
        android:inputType="textPassword"
        android:drawableStart="@android:drawable/ic_lock_idle_lock"
        android:padding="@dimen/input_padding"/>

    <Button
        android:id="@+id/btnRegistrarEmpleado"
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_size_small"
        android:layout_marginTop="@dimen/spacing_large"
        android:backgroundTint="@color/verde_esmeralda"
        android:text="@string/registrar_empleado_register_button"
        android:textColor="@color/blanco"/>

    <TextView
        android:id="@+id/tvIrLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_large"
        android:text="@string/registrar_empleado_login_link"
        android:textColor="@color/azul"
        android:textSize="@dimen/text_size_regular"/>

</LinearLayout>