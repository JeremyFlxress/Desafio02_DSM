<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Productos">

    <?xml version="1.0" encoding="utf-8"?>
    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Botón para agregar producto -->
            <Button
                android:id="@+id/btnAgregarProducto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Agregar Producto"
                android:backgroundTint="@color/teal_700"
                android:textColor="@android:color/white"
                android:layout_marginBottom="16dp"/>

            <!-- Tarjeta Producto 1 -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:cardCornerRadius="16dp"
                android:cardElevation="6dp"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvNombreProducto1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Paracetamol 500mg"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:textColor="@color/black"/>

                    <TextView
                        android:id="@+id/tvDescripcionProducto1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tabletas analgésicas"
                        android:textSize="14sp"
                        android:textColor="@color/darker_gray"
                        android:layout_marginTop="4dp"/>

                    <TextView
                        android:id="@+id/tvPrecioProducto1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Precio: $2.50"
                        android:textSize="14sp"
                        android:textColor="@color/teal_700"
                        android:layout_marginTop="6dp"/>

                    <TextView
                        android:id="@+id/tvStockProducto1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Stock: 30"
                        android:textSize="14sp"
                        android:textColor="@color/black"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Tarjeta Producto 2 -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:cardCornerRadius="16dp"
                android:cardElevation="6dp"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvNombreProducto2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Amoxicilina 250mg"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:textColor="@color/black"/>

                    <TextView
                        android:id="@+id/tvDescripcionProducto2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Antibiótico"
                        android:textSize="14sp"
                        android:textColor="@color/darker_gray"
                        android:layout_marginTop="4dp"/>

                    <TextView
                        android:id="@+id/tvPrecioProducto2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Precio: $8.00"
                        android:textSize="14sp"
                        android:textColor="@color/teal_700"
                        android:layout_marginTop="6dp"/>

                    <TextView
                        android:id="@+id/tvStockProducto2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Stock: 12"
                        android:textSize="14sp"
                        android:textColor="@color/black"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>