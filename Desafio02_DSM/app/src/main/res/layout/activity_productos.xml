<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Productos">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/blanco">

        <!-- HEADER -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/blanco"
            android:padding="@dimen/header_padding"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvAppName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_title"
                android:textSize="@dimen/header_title"
                android:textStyle="bold"
                android:textColor="@color/verde_esmeralda"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/tvEmpleado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/employee"
                android:textSize="@dimen/header_employee"
                android:textColor="@color/gris_texto" />
        </LinearLayout>

        <!-- CONTENIDO -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/medscroll_padding">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- CARD PRODUCTO -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/med_bottomargin"
                    android:elevation="6dp"
                    app:cardCornerRadius="@dimen/med_radius">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="@dimen/med_padding">

                        <!-- IMAGEN -->
                        <ImageView
                            android:layout_width="@dimen/medimage_width"
                            android:layout_height="@dimen/medimage_height"
                            android:src="@drawable/ic_medicine"
                            android:scaleType="centerCrop"
                            android:layout_marginRight="@dimen/medimage_marginRigth" />

                        <!-- INFO -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/med_name"
                                android:textSize="@dimen/med_title"
                                android:textStyle="bold"
                                android:textColor="@color/verde_esmeralda" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/med_prize"
                                android:textSize="@dimen/med_description"
                                android:textColor="@color/gris_texto2" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/med_stock"
                                android:textSize="@dimen/med_description"
                                android:textColor="@color/gris_texto2" />

                            <!-- BOTONES -->
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginTop="@dimen/medbutton_margin">

                                <Button
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Editar"
                                    android:backgroundTint="@color/azul"
                                    android:textColor="@color/blanco"
                                    android:layout_marginRight="@dimen/medbutton_margin" />

                                <Button
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Eliminar"
                                    android:backgroundTint="@color/rojo_boton"
                                    android:textColor="@color/blanco" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>
        </ScrollView>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>