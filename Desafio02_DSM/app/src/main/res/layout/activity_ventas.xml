<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Ventas">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/gris_fondo"
        android:padding="12dp">

        <!-- Header -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Registrar Venta"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@color/verde_esmeralda"
            android:layout_marginBottom="16dp"/>

        <!-- Seleccionar Cliente -->
        <Spinner
            android:id="@+id/spinnerClientes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/blanco"
            android:padding="8dp"/>

        <!-- Seleccionar Productos -->
        <Spinner
            android:id="@+id/spinnerProductos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:background="@color/blanco"
            android:padding="8dp"/>

        <!-- Cantidad -->
        <EditText
            android:id="@+id/etCantidad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Cantidad"
            android:inputType="number"
            android:layout_marginTop="12dp"
            android:background="@color/blanco"
            android:padding="10dp"/>

        <!-- Total -->
        <TextView
            android:id="@+id/tvTotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total: $0.00"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/verde_esmeralda"
            android:layout_marginTop="12dp"/>

        <!-- Botón Confirmar -->
        <Button
            android:id="@+id/btnConfirmarVenta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Confirmar venta"
            android:backgroundTint="@color/verde_esmeralda"
            android:textColor="@color/blanco"
            android:layout_marginTop="12dp"/>

        <!-- Historial -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Historial de Ventas"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/gris_texto"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="8dp"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Ejemplo de venta -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:background="@color/blanco"
                    android:elevation="3dp"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="15/09/2025"
                        android:textColor="@color/verde_esmeralda"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Cliente: María López"
                        android:textColor="@color/gris_texto"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Total: $16.50"
                        android:textColor="@color/gris_texto"
                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>