rrrrrrrrrrrrrrrrrr<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:orientation="horizontal"
        android:padding="12dp"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Imagen -->
        <ImageView
            android:id="@+id/imgProducto"
            android:src="@drawable/ic_medkit"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:contentDescription="Imagen producto"
            android:layout_marginEnd="12dp"/>

        <!-- Info -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvNombreProducto"
                android:text="Paracetamol 500mg"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#2B7A4B"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tvDescripcionProducto"
                android:text="Alivia dolores y fiebre"
                android:textSize="14sp"
                android:textColor="#555555"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tvPrecioStock"
                android:text="$2.50 | Stock: 30"
                android:textSize="14sp"
                android:textColor="#0077B6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <!-- BotÃ³n editar -->
        <ImageButton
            android:id="@+id/btnEditarProducto"
            android:src="@android:drawable/ic_menu_edit"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Editar"
            android:tint="#2B7A4B"
            android:layout_width="40dp"
            android:layout_height="40dp"/>

        <!-- BotÃ³n eliminar -->
        <ImageButton
            android:id="@+id/btnEliminarProducto"
            android:src="@android:drawable/ic_menu_delete"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Eliminar"
            android:tint="#B00020"
            android:layout_width="40dp"
            android:layout_height="40dp"/>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
