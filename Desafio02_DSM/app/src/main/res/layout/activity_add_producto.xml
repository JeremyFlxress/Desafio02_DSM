<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gris_fondo"
    tools:context=".Productos">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- HEADER igual al Dashboard -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tvAppName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="VentaExpress"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="@color/verde_esmeralda"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/tvEmpleado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hola, Sofía"
                android:textColor="@color/gris_texto"
                android:textSize="16sp"/>
        </LinearLayout>

        <!-- LISTA DE PRODUCTOS -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- CARD PRODUCTO -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:elevation="6dp"
                    app:cardCornerRadius="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="12dp">

                        <!-- Imagen -->
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="160dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/ic_launcher_foreground"
                            android:background="#E0E0E0"/>

                        <!-- Nombre y Descripción -->
                        <TextView
                            android:text="Paracetamol 500mg"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@color/verde_esmeralda"
                            android:layout_marginTop="8dp"/>

                        <TextView
                            android:text="Caja con 20 tabletas"
                            android:textSize="16sp"
                            android:textColor="@color/gris_texto" />

                        <TextView
                            android:text="Precio: $2.50"
                            android:textSize="16sp"
                            android:textColor="@color/gris_texto" />

                        <!-- BOTONES -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="8dp">

                            <Button
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Editar"
                                android:backgroundTint="@color/azul_claro"
                                android:textColor="@color/blanco"
                                android:layout_marginRight="8dp" />

                            <Button
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Eliminar"
                                android:backgroundTint="@color/rojo_error"
                                android:textColor="@color/blanco" />
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
